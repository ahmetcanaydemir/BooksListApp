@model DataAccessLayer.Models.Book
@{
    ViewBag.Title = "Yeni Kitap";
}

<h2>Yeni Kitap</h2>
<hr />
@using (Html.BeginForm())
{
<div class="form-horizontal">
    <div class="form-group">
        <div class="row">
            <div class="col-md-10">
                <label>Isbn</label>
                @Html.TextBoxFor(x => x.Isbn, new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-10">
                <label>Ad</label>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-10">
                <label>Yazar</label>
                @Html.TextBoxFor(x => x.Writer, new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-10">
                <label>Yayınevi</label>
                @Html.TextBoxFor(x => x.Publisher, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Oluştur" class="btn btn-primary" />
        </div>
    </div>
</div>
}
